# API Configuration
API_TITLE=Phase 1 Rankings API
API_VERSION=1.0.0
API_DESCRIPTION=Multi-agent renewable energy country ranking system

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Job Configuration
MAX_COUNTRIES=15
MIN_COUNTRIES=2
DEFAULT_PEER_RANKERS=3
MAX_PEER_RANKERS=5
JOB_TIMEOUT_SECONDS=300

# Storage Configuration
REPORTS_DIR=reports
STORAGE_BACKEND=memory
# REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=10
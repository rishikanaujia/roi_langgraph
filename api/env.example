# ============================================================================
# Renewable Energy Investment Ranking API - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# ============================================================================

# ============================================================================
# API Configuration
# ============================================================================
API_TITLE=Phase 1 Rankings API
API_VERSION=1.0.0
API_DESCRIPTION=Multi-agent renewable energy country ranking system
ENVIRONMENT=development
DEBUG=false

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info
WORKERS=1

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# Azure OpenAI Configuration (REQUIRED)
# ============================================================================
# Get these values from Azure Portal > Azure OpenAI Service > Keys and Endpoint

AZURE_OPENAI_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://sparkapi.spglobal.com/v1/sparkassist
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_TEMPERATURE=0.7
AZURE_OPENAI_MAX_RETRIES=3
AZURE_OPENAI_TIMEOUT=120

# ============================================================================
# Legacy OpenAI Configuration (DEPRECATED - Do not use)
# ============================================================================
# These are kept for backward compatibility only
# Use AZURE_OPENAI_* fields above instead
# OPENAI_API_KEY=deprecated-use-azure-openai-key
# OPENAI_MODEL=deprecated-use-azure-openai-deployment

# ============================================================================
# Job Configuration
# ============================================================================
MAX_COUNTRIES=15
MIN_COUNTRIES=2
DEFAULT_PEER_RANKERS=3
MAX_PEER_RANKERS=5
MIN_PEER_RANKERS=2
JOB_TIMEOUT_SECONDS=300
MAX_CONCURRENT_JOBS=5

# ============================================================================
# Storage Configuration
# ============================================================================
STORAGE_BACKEND=memory
MAX_JOBS_IN_MEMORY=1000

# Redis Configuration (if using redis backend)
REDIS_URL=redis://localhost:6379/0
REDIS_KEY_PREFIX=roi:job:
REDIS_TTL=86400
REDIS_POOL_SIZE=10

# ============================================================================
# File System Configuration
# ============================================================================
REPORTS_DIR=reports
DATA_DIR=data
LOGS_DIR=logs
TEMP_DIR=temp

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# Monitoring & Observability
# ============================================================================
ENABLE_METRICS=false
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_LANGGRAPH=true
ENABLE_PHASE2=true
ENABLE_CACHING=false
CACHE_TTL=3600
ENABLE_API_KEYS=false
PARALLEL_EXECUTION=true
MAX_PARALLEL_AGENTS=10
ENABLE_MOCK_MODE=false

# ============================================================================
# Security (Optional - for production)
# ============================================================================
# API_KEYS=["key1","key2","key3"]
# SECRET_KEY=your-secret-key-for-session-management

# ============================================================================
# Notes
# ============================================================================
# 1. Never commit .env file to version control
# 2. Keep .env.example updated as a template
# 3. Required fields: AZURE_OPENAI_KEY, AZURE_OPENAI_ENDPOINT, AZURE_OPENAI_DEPLOYMENT
# 4. For production: set ENVIRONMENT=production, DEBUG=false, RELOAD=false
# 5. For development: ENVIRONMENT=development, DEBUG=true, RELOAD=true
